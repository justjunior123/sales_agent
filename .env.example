# FMCSA API Configuration
FMCSA_API_KEY=your_fmcsa_api_key_here
FMCSA_API_URL=https://mobile.fmcsa.dot.gov/qc/services/carriers

# Database Configuration (PostgreSQL via Supabase)
# Get your connection string from Supabase: Project Settings → Database → Connection string (URI)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO

# Security Configuration
# Generate a secure API key with: openssl rand -hex 32
API_KEY=your_api_key_here_generate_with_openssl_rand_hex_32

# Render Deployment (optional, for production)
PORT=8000
